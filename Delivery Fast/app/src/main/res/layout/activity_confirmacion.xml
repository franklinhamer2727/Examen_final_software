<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".Confirmacion">



    <TextView
        android:id="@+id/textview_confirmacion_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/Confirmacion1"
        android:textSize="40sp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/textview_confirmacion_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/Confirmacion2"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/textview_confirmacion_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/Total"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/textview_confirmacion_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="@string/Confirmacion3"
        android:textSize="25sp"
        android:layout_marginBottom="20dp"/>


</LinearLayout>